<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:background="@drawable/login_background"
    tools:context=".Details">

    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_normal"
        android:gravity="center"
        android:text="Detalji"
        android:textColor="@color/white"
        android:textSize="36dp" />



    <TextView
        android:id="@+id/profile"
        android:layout_width="194dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:text=""
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/backgroundodf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="40dp"
        app:srcCompat="@drawable/emerus_splash_1"
        android:translationZ="0dp"
        />



    <ImageView
        android:id="@+id/image12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="40dp"
        app:srcCompat="@drawable/emerus_splash_1"
        android:translationZ="2dp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="320dp"
        android:layout_height="99dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="511dp"
        android:layout_marginEnd="46dp"
        android:text="NaÅ¾alost nemamo informacija za trenutni profil."
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:translationZ="1dp"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="127dp"
        android:layout_height="39dp"
        android:layout_below="@+id/image12"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="31dp"
        android:text="Vlasnik:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="127dp"
        android:layout_height="39dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="Brzina Presanje:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/vlasniktxt"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_below="@+id/image12"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="68dp"
        android:layout_toEndOf="@+id/textView3"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/brzinapresanje"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_below="@+id/vlasniktxt"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="68dp"
        android:layout_toEndOf="@+id/textView5"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white" />


</RelativeLayout>
</ScrollView>

