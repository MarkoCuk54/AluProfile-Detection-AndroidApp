<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:background="@drawable/login_background"
    tools:context=".Details">

    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_normal"
        android:gravity="center"
        android:text="Detalji"
        android:textColor="@color/white"
        android:textSize="36dp" />



    <TextView
        android:id="@+id/profile"
        android:layout_width="194dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:text=""
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/backgroundodf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="40dp"
        app:srcCompat="@drawable/emerus_splash_1" />
    <ImageView
        android:id="@+id/image12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="40dp"
        app:srcCompat="@drawable/emerus_splash_1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="127dp"
        android:layout_height="39dp"
        android:layout_below="@+id/image12"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="31dp"
        android:text="Vlasnik:"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/vlasniktxt"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_below="@+id/image12"
        android:layout_alignParentStart="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="30dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white" />


</RelativeLayout>
</ScrollView>

