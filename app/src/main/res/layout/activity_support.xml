<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".Support">

    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gradient_normal"
        android:gravity="center"
        android:text="Tehnička podrška"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="95dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@+id/Designed"
        android:src="@drawable/suport123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Designed"
        app:layout_constraintVertical_bias="0.113"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/Designed"
        android:layout_width="253dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="11dp"
        android:autoLink="web"
        android:gravity="left"
        android:text="Naša tvrtka pruža uslugu tehničke podrške i naporno radimo na postizanju vrhunske usluge u ime svojih klijenata."
        android:textColor="#ffff"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="347dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/Designed1"
        android:layout_width="255dp"
        android:layout_height="174dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="393dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="24dp"
        android:autoLink="web"
        android:gravity="left"
        android:text="Korisnicima pružamo usluge implementacije i provjere ispravnosti sustava kako bismo osigurali rad aplikacije pod stalnim i sigurnim profesionalnim radom."
        android:textColor="#ffff"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="2dp" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="96dp"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="385dp"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@+id/Designed1"
        android:src="@drawable/odrzavanje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Designed"
        app:layout_constraintVertical_bias="0.113" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="554dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/contactbtn"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="608dp"
        android:layout_marginEnd="131dp"
        android:alpha="0.9"
        android:background="@drawable/gradient_normal"
        android:text="KONTAKT"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>